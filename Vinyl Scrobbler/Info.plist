<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "https://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Primary language -->
    <key>CFBundleDevelopmentRegion</key>
    <string>en</string>

    <!-- Executable name (matches PRODUCT_NAME) -->
    <key>CFBundleExecutable</key>
    <string>Vinyl Scrobbler</string>

    <!-- App icon file (unused if using Assets; can remain empty) -->
    <key>CFBundleIconFile</key>
    <string></string>

    <!-- Bundle identifier -->
    <key>CFBundleIdentifier</key>
    <string>com.russmckendrick.vinyl-scrobbler</string>

    <!-- Info dictionary version -->
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>

    <!-- Display name (often the same as PRODUCT_NAME) -->
    <key>CFBundleName</key>
    <string>Vinyl Scrobbler</string>

    <!-- Package type for macOS apps -->
    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <!-- Marketing version & build number -->
    <key>CFBundleShortVersionString</key>
    <string>1.0.1</string>
    <key>CFBundleVersion</key>
    <string>1</string>

    <!-- (Optional) Example document type if your app handles public.json -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>Configuration File</string>
            <key>LSHandlerRank</key>
            <string>Default</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.json</string>
            </array>
        </dict>
    </array>

    <!-- Minimum required macOS version -->
    <key>LSMinimumSystemVersion</key>
    <string>15.2</string>

    <!-- Transport security settings -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>

    <!-- Main class for a Cocoa macOS app -->
    <key>NSPrincipalClass</key>
    <string>NSApplication</string>

    <!-- Hide Dock icon if set true (Agent app style) -->
    <key>LSUIElement</key>
    <true/>

    <!-- Add these keys to your Info.plist -->
    <key>NSUserNotificationAlertStyle</key>
    <string>alert</string>
    <key>NSUserNotificationUsageDescription</key>
    <string>We need to send you notifications about your scrobbling activity</string>
</dict>
</plist>